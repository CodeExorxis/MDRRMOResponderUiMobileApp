<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/locationIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_location_on" />

    <ImageView
        android:id="@+id/NotificationOff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_notification_off" />

    <ImageView
        android:id="@+id/ic_log"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/NotificationOff"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_log" />

    <ImageView
        android:id="@+id/ic_settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/NotificationOff"
        android:layout_marginTop="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_settings" />



   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="Google Map API"
       android:textSize="50sp"
       android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_StatusReport"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:text="@string/StatsReport"
            android:background="@drawable/btn_round_red"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btn_PcrReport"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:text="@string/PcrReport"
            android:background="@drawable/btn_round_red"
            app:backgroundTint="@null"/>

                                <!--Status report Categories-->
        <LinearLayout
            android:id="@+id/statusReportCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:padding="16dp"
            android:layout_marginBottom="80dp">


            <Button
                android:id="@+id/btn_On_Scene"
                android:layout_width="220dp"
                android:layout_height="70dp"
                android:text="On Scene"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_flat_red"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btn_Transfer_Patient"
                android:layout_width="220dp"
                android:layout_height="70dp"
                android:text="Transferring Patiend"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_flat_red"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btn_Completed"
                android:layout_width="220dp"
                android:layout_height="70dp"
                android:text="Completed"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_flat_red"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btnSubmitStatusReport"
                android:layout_width="220dp"
                android:layout_height="70dp"
                android:text="Submit Report"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_blue_bg"
                app:backgroundTint="@null"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
                                                         <!--PCR Form category-->
        <LinearLayout
            android:id="@+id/PCR_form_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/btnSmartSms"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="PCR Form"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_flat_red"
                app:backgroundTint="@null"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnGlobeSms"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:text="Refusal Form"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_flat_red"
                app:backgroundTint="@null"
                android:layout_marginBottom="80dp" />

        </LinearLayout>
    </RelativeLayout>








</RelativeLayout>